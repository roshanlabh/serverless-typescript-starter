{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2017",
    "lib": ["es2017"],
    "moduleResolution": "node",
    "removeComments": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "outDir": ".build/",
    "rootDir": "src/"
  },
  // "include": ["./**/*.ts"],
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules/**/*", ".serverless/**/*", ".webpack/**/*", "_warmup/**/*", ".vscode/**/*", "**/*.spec.ts"]
}
